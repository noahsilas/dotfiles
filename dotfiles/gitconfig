[alias]
  r = reset --hard origin/master
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff
  lg  = log --graph --pretty=format:'%C(cyan)%h%Creset - %s %Cgreen(%cr) %C(blue)<%an>%C(yellow)%d%Creset' --abbrev-commit
  lag = log --graph --pretty=format:'%C(cyan)%h %Cgreen(%cD)%Creset - %s %Cblue<%an> %C(yellow)%d%Creset' --abbrev-commit
  dtag = !git tag release-`date \"+%Y%m%d%H%M\"`
  p = pull --rebase
  sha1 = rev-parse HEAD
  su = submodule update --init
  staged = diff --cached
  patch = add --patch
  amend = commit --amend
  pear = pair
  reset-author = commit --amend --reset-author -C HEAD
  cont = rebase --continue

  # http://technosorcery.net/blog/2012/08/05/updated-git-rebase-interactive-autosquash-commit-preparation/
  fixup = !sh -c 'git commit --fixup=$1' -
  squash = !sh -c 'git commit --squash=$1' -
  ri = rebase --interactive --autosquash

[branch]
  autosetuprebase = local

[apply]
  whitepace = fix

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  excludesfile = "~/.gitignore"

[log]
  decorate = short

[merge]
  log = 100
  ff = only

[push]
  default = upstream

[rebase]
  autosquash = true

[rerere]
  enabled = true

[user]
  name = Noah Silas
  email = noah@silas.cc
  gerrit = noah

# Only works in 1.7.10+
[include]
  path = ~/.gitconfig.local
